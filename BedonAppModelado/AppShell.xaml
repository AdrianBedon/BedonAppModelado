<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BedonAppModelado.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BedonAppModelado"
    xmlns:views ="clr-namespace:BedonAppModelado.Views"
    FlyoutIcon="Menu"
    BackgroundColor="Black"
    Shell.TabBarIsVisible="False">

    <FlyoutItem Route="ABMMain" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Frases"
            ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent
            Title="Favoritas" 
            Icon="vehicles_icon.png"
            ContentTemplate="{DataTemplate views:Favoritas}"/>
    </FlyoutItem>

</Shell>
